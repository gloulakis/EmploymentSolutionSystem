@page
@model LoginModel

<link href="~/css/main.css" rel="stylesheet">
<link href="~/css/util.css" rel="stylesheet">
<h1>@ViewData["Title"]</h1>
    <div class="limiter">
        <div class="container-login100">
                    <form id="account" method="post" class="login100-form validate-form">
                        <span class="login100-form-title p-b-43">
                            Account Login
                        </span>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="wrap-input100 rs1 validate-input">
                            <input asp-for="Input.Email" class="input100" />
                            <span asp-validation-for="Input.Email" class="label-input100"></span>
                        </div>
                        <div class="wrap-input100 rs2 validate-input">
                            <input class="input100" asp-for="Input.Password" class="form-control" />
                            <span class="label-input100" asp-validation-for="Input.Password"></span>
                        </div>
                        <div  class="container-login100-form-btn">
                            <button type="submit" class="login100-form-btn">Log in</button>
                        </div>
                        <div class="text-center w-full p-t-23">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                        </div>
                    </form>
            </div>
        </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}