@model JobList
@{
    ViewData["Title"] = "Create";
}

<br />
<br />
<div class="form-row">
    <div class="col-6">
        <h4 class="text-info">Create New Advertisement!</h4>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Advertisement" class="btn btn-info">Back</a>
    </div>
</div>
<br />

<form asp-controller="Home" asp-action="Create" runat="server" enctype="multipart/form-data" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Title</span>
        </div>
        <input type="text" class="form-control" asp-for="JobTitle" aria-label="Job Title" aria-describedby="basic-addon1">
        <span asp-validation-for="JobTitle" class="text-danger"></span>
    </div>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Position</span>
        </div>
        <input type="text" class="form-control" asp-for="JobPosition" aria-label="Job Position" aria-describedby="basic-addon1">
        <span asp-validation-for="JobPosition" class="text-danger"></span>
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Description</span>
        </div>
        <textarea class="form-control" asp-for="JobDescription"></textarea>

        <span asp-validation-for="JobDescription" class="text-danger"></span>
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Salary</span>
        </div>
        <input type="number" class="form-control" style="width:auto" asp-for="JobSalary" aria-label="Job Salary" aria-describedby="basic-addon1">
        <span asp-validation-for="JobSalary" class="text-danger"></span>
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
        </div>
        <div class="custom-file">
            <input type="file" class="custom-file-input" asp-for="JobImage"  runat="server" aria-describedby="inputGroupFileAddon01"/>
            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
            <span asp-validation-for="JobImage" class="text-danger"></span>
        </div>
    </div>


    <input class="btn btn-info" type="submit"  value="Add" />
</form>


<br /><br />



 <script src="https://cdn.tiny.cloud/1/bor31yfd0f142uzi03meje77c7zvudgp1vqiu4703wqkbqnf/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>


 <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
            toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
            toolbar_mode: 'floating',
            tinycomments_mode: 'embedded'
        });


 </script>


